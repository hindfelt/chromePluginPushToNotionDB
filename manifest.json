{
  "manifest_version": 3,
  "name": "Push to Notion",
  "version": "1.0",
  "description": "A Chrome extension to send web pages to a Notion database.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "notifications"
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.svg",
      "48": "images/icon48.svg",
      "128": "images/icon128.svg"
    }
  },
  "icons": {
    "16": "images/icon16.svg",
    "48": "images/icon48.svg",
    "128": "images/icon128.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://api.notion.com/",
    "https://generativelanguage.googleapis.com/"
  ]
}